---
import LayoutWorks from "../../layouts/LayoutWorks.astro";
import { WORKS } from "../../constants";
const id = 1;

const { title, date, description, year } = WORKS.find((work) => work.id === id);
---

<LayoutWorks title={title}>
  <p class="mt-2">
    <b>{title}</b>, created on {date} of {year}
  </p>
  <p>{description}</p>
</LayoutWorks>

<script>
  import p5 from "p5";
  import { loveStory } from "../../scripts";
  new p5(loveStory, document.getElementById("sketch"));
</script>
