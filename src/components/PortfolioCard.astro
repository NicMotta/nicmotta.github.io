---
const {title, url, year, tecnology, code, img} = Astro.props;
---

<div class="relative my-4 h-32 mx-1">
  <a href={url}>
    <div class="bg-gray-100 absolute top-10 left-5 p-1 m-1 hover:bg-gray-300">
      <p class="text-base font-bold md:text-lg">{title}</p>
      <p class="text-sm text-gray-500 font-bold md:text-base">[{year}] / {tecnology}</p>
    </div>

    {
      (code==='') 
        ? <></>
        : <a class="bg-gray-100 absolute top-10 right-5 p-1 m-1 text-right hover:bg-gray-300" href={code}>
            <p class="text-base font-bold md:text-lg">Ver c√≥digo</p>
            <p class="text-sm text-gray-500 font-bold md:text-base">[Github]</p>
          </a>
    }
    
    <img class="object-cover h-full w-full" src={`./assets/images/portfolio/${img}`} alt=""> 
  </a>
</div>